<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MakeaccountActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/btn_prev"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="left"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_left_grey"
            android:text="계정생성" />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_therma_grey" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="계정 생성"
            android:textSize="15dp"
            android:layout_gravity="center"/>

    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="85dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:text="▷ 계정이름:"
            android:textSize="15dp"/>
        <EditText
            android:id="@+id/et_accountname"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="85dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:text="▷ 성별:"
            android:textSize="15dp"/>
        <Spinner
            android:id="@+id/sp_accountsex"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:entries="@array/dm_sex"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="85dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:text="▷ 나이:"
            android:textSize="15dp"/>
        <Spinner
            android:id="@+id/sp_accountage"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:entries="@array/dm_age" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="85dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:text="▷ 측정시간:"
            android:textSize="15dp"/>

        <TimePicker
            android:id="@+id/tp_reservation"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:timePickerMode="spinner"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_accountok"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:text="확 인"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:layout_marginTop="30dp"
        android:background="@drawable/buttonshape"/>
</LinearLayout>